<h2>Edit this movie ✏️</h2>
{{#with movies}}
	<form action="/movies/{{id}}/edit" method="POST">
		<label for="title"><Title></Title>: </label>
		<input type="text" name="title" id="title" value="{{title}}">

		<label for="genre">Genre: </label>
		<input type="text" name="genre" id="genre" value="{{genre}}">

		<label for="plot">Description: </label>
		<input type="text" name="plot" id="plot" value="{{plot}}">

		<label for="cast">Cast: </label>
		<input type="text" name="cast" id="cast" value="{{cast}}">

		<button type="submit">Update this Movie 🖋</button>
	</form>
{{/with}}